@model xXxYeetroom2000xXx.Models.Kommentar
@{
    ViewData["Title"] = "Index";
}

<div id="page-headline">
    <h1>xXxYeetroom2000HDxXx</h1>
</div>
<!--<a asp-action="CreatePost">Neuen Post erstellen</a>-->

@{
    <div class="posts">
        @foreach (Post post in ViewBag.Posts)
        {
            <div class="post">
                <div class="author">
                    <p>@post.Verfasser</p>
                </div>
                <div class="created-date">
                    <p>@post.Datum</p>
                </div>
                <div class="post-content">
                    @{
                        if (post.Link != "")
                        {
                            <img src="@post.Link" />
                        }
                        if (post.Eintrag != "")
                        {
                            <p> @post.Eintrag </p>
                        }
                    }
                </div>
                <div class="post-comments">
                    @foreach (Kommentar kommentar in ViewBag.Kommentare)
                    {
                        @if (post.ID == kommentar.Post_ID)
                        {
                            <p> @kommentar.Verfasser schreib: @kommentar.Eintrag </p>
                        }
                    }
                </div>
                <div class="create-command">
                    <input class="show-form btn btn-primary" type="button" value="Kommentar verfassen" />
                    <form asp-action="CreateKommentar">
                        <div class="form-group">
                            <input class="form-control" asp-for="Verfasser" placeholder="Verfasser" />
                            <input class="form-control" asp-for="Eintrag" placeholder="Beitrag" />
                            <input class="hide hidden" asp-for="Post_ID" value="@post.ID" />
                            <input class="btn btn-primary form-submit" type="submit" value="CreateKommentar" />
                        </div>
                    </form>
                </div>
            </div>
        }
    </div>
}
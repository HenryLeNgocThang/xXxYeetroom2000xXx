                </div>
            </nav>
        </header>
        <div id="content">
            <div class="modal" id="page-settings-modal" tabindex="-1" role="dialog" aria-labelledby="page-settings-modalTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div id="page-settings" class="draggable">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLongTitle">Einstellungen</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-6">
                                        <label>
                                            Primärfarbe:
                                        </label>
                                    </div>
                                    <div class="col-6">
                                        <input id="primary-color" data-setting="primary" type="color" />
                                    </div>
                                    <div class="col-6">
                                        <label>
                                            Hintergrundfarbe:
                                        </label>
                                    </div>
                                    <div class="col-6">
                                        <input id="background-color" data-setting="background" type="color" />
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button id="saveSettings" type="button" class="btn btn-primary">Save changes</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
                <footer class="border-top footer text-muted">
                    &copy; 2021 - xXxYeetroom2000xXx
                </footer>
            </div>

            <div id="message-box" class="btn btn-primary">
                <p>Raum betreten</p>
            </div>
        </div>
    </div>

    <script src="~/dist/bundle.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

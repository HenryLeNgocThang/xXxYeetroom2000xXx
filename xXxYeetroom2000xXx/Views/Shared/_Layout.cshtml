<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - xXxYeetroom2000xXx</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/dist/bundle.css" />
</head>
<body>
    <div id="content-wrapper">
        <header>
            <nav class="navbar">
                <div class="d-flex flex-column align-items-star text-center">
                    <div class="text-center">
                        <a class="navbar-brand" asp-controller="Home" asp-action="Index">YR</a>
                    </div>
                    <div class="navbar-collapse">
                        <ul class="navbar-nav d-flex flex-column">
                            <li class="nav-item p-3">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">
                                    <i class="fa fa-commenting" aria-hidden="true"></i>
                                </a>
                            </li>
                            <li class="nav-item p-3">
                                <a class="nav-link" asp-action="CreatePost">
                                    <i class="fa fa-plus-square" aria-hidden="true"></i>
                                </a>
                            </li>
                            <li class="nav-item p-3">
                                <a class="nav-link">
                                    <i class="fa fa-cog" aria-hidden="true"></i>
                                </a>
                            </li>
                            <li class="nav-item p-3">
                                <a class="nav-link" onclick="location.reload()">
                                    <i class="fa fa-refresh" aria-hidden="true"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div id="content">
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
                <footer class="border-top footer text-muted">
                    <div class="container">
                        &copy; 2021 - xXxYeetroom2000xXx - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </div>
                </footer>
            </div>
        </div>
    </div>
    
    <script src="~/dist/bundle.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
